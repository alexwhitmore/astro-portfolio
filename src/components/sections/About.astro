---
import Container from '../Container.astro'
import me from '../../images/me.jpg'
import { aboutMeText } from '@config'
---

<Container>
  <div class="about-wrapper flex">
    <div class='inner-wrapper flex'>
        <div>
          <h2 class='about-header' id='about'>
            About Me
          </h2>
          <p class='about-p'>
            {aboutMeText}
          </p>
        </div>
        <img src={me} class='about-img' alt='A picture of Alex in front of rocks.' />
    </div>
  </div>
</Container>

<style>
.about-wrapper {
  height: calc(100vh - 66.5px);
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.about-header {
  scroll-margin-top: 3em;
}

.about-p {
  line-height: 1.75;
}

.about-img {
  width: min(75%, 300px);
  margin-top: 2rem;
  box-shadow: var(--theme-shadow);
  border-radius: var(--theme-border-radius);
}

.inner-wrapper {
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

@media screen and (min-width: 700px) {
  .inner-wrapper {
    flex-direction: row;
    justify-content: space-between;
    align-items: start;
    gap: 2rem;
  }

  .about-header {
    scroll-margin-top: 7em;
  }

  .about-img {
    margin-top: 4rem;
  }

  .about-header {
    margin-bottom: 0rem;
  }

  :is(.about-p):first-of-type {
    padding-top: 1.5rem;
  }
}
</style>