---
import ThemeToggler from '../ThemeToggler'
import HeaderMenu from '../HeaderMenu'
import HeaderScrollLink from './HeaderScrollLink'
---

<header>
  <nav class='navbar-wrapper flex'>
      <a href="/">Alex Whitmore</a>
        <div class='navbar-links flex'>
          <HeaderMenu client:load />

          <HeaderScrollLink client:idle text='About' location='#about' headerClass='navbar-links__item' offset={-100} />

          <HeaderScrollLink client:idle text='Experience' location='#experience' headerClass='navbar-links__item' offset={-35} />

          <HeaderScrollLink client:idle text='Contact' location='#contact' headerClass='navbar-links__item' offset={-75} />

          <ThemeToggler client:idle />
        </div>
  </nav>
</header>

<style>
  .navbar-wrapper {
    justify-content: space-between;
    align-items: center;
    padding: 1.75rem 2.25rem;
    width: 100%;
    position: fixed;
    background: var(--theme-bg);
    box-shadow: var(--theme-shadow);
  }

  .navbar-links {
    align-items: center;
    justify-content: center;
  }
</style>